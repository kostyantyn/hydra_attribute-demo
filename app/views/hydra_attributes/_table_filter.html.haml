%tr
  %th
  %th{style: 'padding:2px;'}
    = select_tag 'entity_type', options_for_select(hydra_entity_types, params[:entity_type]), include_blank: true, class: 'form-control input-sm'
  %th{style: 'padding:2px;'}
    = text_field_tag 'name', params[:name], class: 'form-control input-sm'
  %th{style: 'padding:2px;'}
    = select_tag 'backend_type', options_for_select(HydraAttribute::SUPPORTED_BACKEND_TYPES, params[:backend_type]), include_blank: true, class: 'form-control input-sm'
  %th{style: 'padding:2px;'}
    = text_field_tag 'default_value', params[:default_value], class: 'form-control input-sm'
  %th{style: 'padding:2px;'}
    = select_tag 'white_list', options_for_select([['true', 1], ['false', 0]], params[:white_list]), include_blank: true, class: 'form-control input-sm'
  %th{style: 'padding:2px;'}
    = button_tag 'search', name: nil, class: 'btn btn-success btn-sm'
    = link_to content_tag(:span, '', class: 'glyphicon glyphicon-remove-circle'), hydra_attributes_path, class: 'btn btn-primary btn-sm'