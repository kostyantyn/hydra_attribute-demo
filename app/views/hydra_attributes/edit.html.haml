.col-md-12
  %ol.breadcrumb
    %li= link_to 'HydraAttributes', hydra_attributes_path
    %li= link_to @hydra_attribute.name, hydra_attribute_path(@hydra_attribute)
    %li.active Edit

.col-md-6
  .panel.panel-default
    .panel-heading
      %h3.panel-title Update HydraAttribute
    .panel-body
      = form_for(@hydra_attribute, url: hydra_attribute_path(@hydra_attribute), as: :hydra_attribute) do |f|
        = render 'form_fields', f: f
        .form_group
          = f.button 'Update', class: 'btn btn-success'
          = link_to 'Cancel', hydra_attributes_path, class: 'btn btn-primary'